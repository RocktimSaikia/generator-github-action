{
	"name": "<%= actionName %>",
	"version": "1.0.0",
	"description": "<%= actionDescription %>",
	"license": "MIT",
	"repository": "<%= githubUserName %>/actionName",
	"author": {
		"name": "<%= githubUserName %>",
		"email": "<%= email %>",
		"url": "<%= normalizedWebsite %>"
	},
	"engines": {
		"node": ">=8"
	},
	"xo": {
		"ignore": "/dist/**"
	},
	"scripts": {
		"lint": "xo index.js",
		"build": "ncc build index.js -o dist --source-map"
	},
	"files": [
		"index.js"
	],
	"keywords": [
		"<%= actionName %>",
		"github-action"
	],
	"dependencies": {
		"@actions/core": "^1.2.4",
		"@actions/github": "^4.0.0"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.23.0",
		"xo": "^0.33.0"
	}
}
